@model primeira_projeto_aspnetmvc.Models.Pessoa

@{
    ViewData["Title"] = "Create";
}
<nav class="navbar border navbar-expand-lg navbar-light bg-light btn-nav row">
  <div class="col-md-12">
    <h1>Novo</h1>

    <h4>Pessoa</h4>
  </div>
</nav>

<div class="row border shadow rounded">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" id="cpf"/>
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnderecoId" class="control-label"></label>
                <select asp-for="EnderecoId" class ="form-control" asp-items="ViewBag.EnderecoId"></select>
            </div>
           <div class="form-group">
               <input type="submit" value="Criar" class="btn btn-primary" />
           </div>
        </form>
    </div>
</div>

<nav class="navbar border navbar-expand-lg navbar-light bg-light btn-nav row">
    <div>
        <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span><a asp-action="Index">Voltar a Lista</a>
    </div>
</nav>
